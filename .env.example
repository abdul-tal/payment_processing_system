# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payment_backend
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# Authorize.Net Configuration
AUTHNET_API_LOGIN_ID=your_api_login_id
AUTHNET_TRANSACTION_KEY=your_transaction_key
AUTHNET_ENVIRONMENT=sandbox
# AUTHNET_ENVIRONMENT=production (for production)

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Payment Configuration
DEFAULT_CURRENCY=USD
MAX_PAYMENT_AMOUNT=10000
MIN_PAYMENT_AMOUNT=1

# Webhook Configuration (for future use)
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-domain.com/webhooks/authorize-net
